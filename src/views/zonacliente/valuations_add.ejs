<% include ../partials/_header %>
    <div class="container mt-5">
        <form action="/zonacliente/valuations/add" method="POST">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre de la Obra">
             <label>Categoria</label>
            <select name="categoria_id" id="categoria_id">
                <option value=""></option>
                <% categorias.forEach(function(cat) { %>
                    <option value="<%= cat.id %>">
                        <%= cat.nombre %>
                    </option>
                    <% }); %>
            </select>
            <label>Tipo de Objeto</label>
            <select name="tipoObjeto_id" id="tipoObjeto_id">
                <option value=""></option>
                <% tipo_objetos.forEach(function(tipo) { %>
                    <option value="<%= tipo.id %>">
                        <%= tipo.nombre %>
                    </option>
                    <% }); %>
            </select>
            <label>Tecnica</label>
            <select name="tecnica_id" id="tecnica_id">
                <option value=""></option>
                <% tecnicas.forEach(function(tec) { %>
                    <option value="<%= tec.id %>">
                        <%= tec.nombre %>
                    </option>
                    <% }); %>
            </select>
            <label>Firmado</label>
            <select name="firmado_id">
                <option value=""></option>
                <option value="si">Si</option>
                <option value="no">No</option>
            </select>
            <br>
            <label>Tama√±o</label>
            <select name="tamanio_id" id="tamanio_id">
                <option value=""></option>
                <% tecnicas.forEach(function(tec) { %>
                    <option value="<%= tec.id %>">
                        <%= tec.nombre %>
                    </option>
                    <% }); %>
            </select>
            <label>Conservacion</label>
            <select name="conservacion_id" id="conservacion_id">
                <option value=""></option>
                <% conservacions.forEach(function(con) { %>
                    <option value="<%= con.id %>">
                        <%= con.nombre %>
                    </option>
                    <% }); %>
            </select>
            <label>Comentarios</label>
            <textarea value="comentario" rows="4" cols="25">Si lo desea deje comentario</textarea>
            <!-- //PARA LA IMAGEN
        <input type='file' name="imagenes" placeholder="imagen"> -->
        <button type="submit" class="btn btn-primary">
                Enviar Valoracion
        </button>
        </form>
    </div>
