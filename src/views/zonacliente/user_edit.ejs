<% include ../partials/_header %>
<% include ../partials/_bar %>
<% include ../partials/_nav %>

<div class="content-wrapper">
    <section class="content">
      <div class="row">
          <div class="register-box">
              <div class="register-box-body">
                  <p class="login-box-msg">Hola <%= data.nombre %>, que deseas modificar?</p>
                  <hr width="100%" />  
                  <form action="/zonacliente/data/update/<%= data.id %>" method="POST">
                  <label>Contraseña</label>
                  <input type="password" name="password" data-validation="confirmation" data-validation-length="min6" class="form-control">
                  <br>
                  <label>Repetir Contraseña</label>
                  <input type="password" name="password_confirmation" data-validation="length" data-validation-length="min6" class="form-control">
                  <br>
                  <label>Teléfono</label>
                  <input type="text" name="telefono" class="form-control">
                  <br>
                  <label>Código Postal</label>
                  <input type="text" name="codigoPostal" class="form-control">
                  <br>
                  <label>Email</label>
                  <input type="text" name="email" class="form-control">
                  <br>
                  <button type="submit" class="btn btn-success">
                  Guardar Cambios
                  </button>
                  <a href="/zonacliente/user" class="btn btn-primary ">Cancelar</a>
                  </form>
              </div>
            </div>
          </div>
        </section>
      </div>
  
 
<% include ../partials/_footer %>
