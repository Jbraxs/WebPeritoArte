<% include ../partials/_header %>
  Listado de usuarios registrados
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>id</td>
              <td>Nombre</td>
              <td>Apellido</td>
              <td>Télefono</td>
              <td>Código Postal</td>
              <td>Fecha de Nacimiento</td>
              <td>Email</td>
              <td><a href="./users/add" class="btn btn-info">Resistrar Usuario</a></td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td>
                    <%= data[i].id %>
                  </td>
                  <td>
                    <%= data[i].nombre %>
                  </td>
                  <td>
                    <%= data[i].apellido %>
                  </td>
                  <td>
                    <%= data[i].telefono %>
                  </td>
                  <td>
                    <%= data[i].codigoPostal %>
                  </td>
                  <td>
                    <%= data[i].fechaNac %>
                  </td>
                  <td>
                    <%= data[i].email %>
                  </td>
                  <td>
                    <a href="/admin/users/update/<%= data[i].id %>" class="btn btn-info">Modificar</a>
                    <a href="/admin/users/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% include ../partials/_footer %>