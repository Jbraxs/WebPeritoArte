            <div class="content-wrapper">
                 <section class="content">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="register-box">
                            <div class="register-box-body">
                                <p class="login-box-msg">Detalle del Contacto</p>
                                <hr width="100%" />
                                <div>
                                <label>Nombre:</label>
                                <%= data.nombre %>
                                </div>
                                <br>
                                <div>                                
                                <label>Apellido:</label>
                                <%= data.apellido %>
                                </div>
                                <br>
                                <div>                                
                                <label>Email:</label>
                                <%= data.email %>
                                </div>
                                <br>  
                                <div>
                                <label>Tel√©fono:</label>
                                <%= data.telefono %>
                                </div>
                                <br>
                                <div>                                
