<% include ../partials/_headeradmin %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card">
        <div class="card-body">
          <form action="/admin/users/update/<%= data.id %>" method="POST">
            <h4>Hola
              <%= data.nombre %>
            </h4>
            <div class="form-group">
              <label>Contraseña</label>
              <input type="text" name="password" class="form-control">
            </div>
            <div class="form-group">
                <label>Repetir Contraseña</label>
                <input type="text" name="password" class="form-control">
              </div>
            <div class="form-group">
              <label>Teléfono</label>
              <input type="text" name="telefono"class="form-control">
            </div>
            <div class="form-group">
                <label>Código Postal</label>
                <input type="text" name="codigoPostal" class="form-control">
              </div>
            <div class="form-group">
            <label>Email</label>
            <input type="text" name="email" class="form-control">
          </div>
            <button type="submit" class="btn btn-primary">
              Guardar Cambios
            </button>
            <a href="/admin/users" class="btn btn-primary ">Cancelar</a>
          </form>
        </div>
      </div>
    </div>
  </div>

  <% include ../partials/_footer %>