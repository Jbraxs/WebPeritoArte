<% include ../partials/_header %>
<% include ../partials/_bar %>
<% include ../partials/_nav %>

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="register-box">
                <div class="register-box-body">
                    <p class="login-box-msg">Se van a modificar los datos de  <%= data.nombre %></p>
                    <hr width="100%" />
                    <form action="/admin/users/update/<%= data.id %>" method="POST">
                    <div>
                    <label>Teléfono</label>
                    <input type="text" class="form-control" data-validation="required number" data-validation="length" data-validation-length="min6" name="telefono" >
                    </div>
                    <br>
                    <div>
                    <label>Código Postal</label>
                    <input type="text" name="codigoPostal" class="form-control" data-validation="required number" data-validation="length"  data-validation-length="min5"> 
                    </div>
                    <br>
                    <div>
                    <label>Email</label>
                    <input type="text" name="email" data-validation="email" class="form-control">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-success btnUpd">Guardar Cambios</button>
                    <a href="/admin/users" class="btn btn-primary">Cancelar</a>
                    </form>
                </div>
           </div>
        </div>
     </section>
</div>




<% include ../partials/_footer %>