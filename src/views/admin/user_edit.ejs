<% include ../partials/_header %>
<% include ../partials/_bar %>
<% include ../partials/_nav %>

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="register-box">
                <div class="register-box-body">
                    <p class="login-box-msg">Se van a modificar los datos de  <%= data.nombre %></p>
                    <hr width="100%" />
                    <form action="/admin/users/update/<%= data.id %>" method="POST">
                    <label>Teléfono</label>
                    <input type="text" name="telefono" value="<%= data.telefono%>" class="form-control">
                    <br>
                    <label>Código Postal</label>
                    <input type="text" name="codigoPostal" value="<%= data.codigoPostal%>" class="form-control">
                    <br>
                    <label>Email</label>
                    <input type="text" name="email" value="<%= data.email%>" class="form-control">
                    <br>
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    <a href="/admin/users" class="btn btn-primary ">Cancelar</a>
                    </form>
                </div>
           </div>
        </div>
     </section>
</div>




<% include ../partials/_footer %>