<% include ../partials/_header %>
<% include ../partials/_bar %>
<% include ../partials/_nav %>

<div class="content-wrapper">
  <section class="content-header">
    <h4>Modificar Usuario</h4>
  </section>
  <div class="row">
    <div class="col-md-6">
      <section class="content">
        <div class="box">
          <div class="box-body">
            <h4>Se van a modificar los datos de:
              <%= data.nombre %></h4>
            <div class="box-body">
              <div class="form-group">
                <form action="/admin/users/update/<%= data.id %>" method="POST">
                  <label>Contraseña</label>
                  <input type="password" name="password"  value="<%= data.password%>" class="form-control">
              </div>
              <div class="form-group">
                <label>Repetir Contraseña</label>
                <input type="password" value="<%= data.password%>" class="form-control">
              </div>
              <div class="form-group">
                <label>Teléfono</label>
                <input type="text" name="telefono" value="<%= data.telefono%>" class="form-control">
              </div>
              <div class="form-group">
                <label>Código Postal</label>
                <input type="text" name="codigoPostal" value="<%= data.codigoPostal%>" class="form-control">
              </div>
              <div class="form-group">
                <label>Email</label>
                <input type="text" name="email" value="<%= data.email%>" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">
                Guardar Cambios
              </button>
              <a href="/admin/users" class="btn btn-primary ">Cancelar</a>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>




<% include ../partials/_footer %>