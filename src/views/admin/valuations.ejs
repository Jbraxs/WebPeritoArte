<% include ../partials/_headeradmin %>

<div class="container mt-5 ml-2">
      <div class="row">
        <div class="col-md-12">
          <div class="clearfix mb-5">
            <div class="table-responsive-md">
                <% if (valuations.length > 0) { %>
              <table class="table table-hover table-responsive-sm">
                <thead>
                  <tr>
                    <th scope="col">Nº</th>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Categoría</th>
                    <th scope="col">Tipo de Objeto</th>
                    <th scope="col">Técnica</th>
                    <th scope="col">Tamaño</th>
                    <th scope="col">Firmado</th>
                    <th scope="col">Comentario</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Conservación</th>
                    <th scope="col">Acción</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < valuations.length; i++) { %>
                      <tr class="table-secondary">
                        <td>
                            <%= valuations[i].id %>
                        </td>
                        <td>
                            <%= valuations[i].idUsuario %>
                        </td>
                        <td>
                            <%= valuations[i].nombre %>
                        </td>
                        <td>
                            <%= valuations[i].categoria %>
                        </td>
                        <td>
                            <%= valuations[i].tipo_objeto %>
                        </td>
                        <td>
                            <%= valuations[i].tecnica %>
                        </td>
                        <td>
                            <%= valuations[i].tamanio %>
                        </td>
                        <td>
                            <%= valuations[i].firmado %>
                        </td>
                        <td>
                            <%= valuations[i].comentario %>
                        </td>
                        <td>
                            <%= valuations[i].imagen %>
                        </td>
                        <td>
                            <%= valuations[i].conservacion %>
                        </td>
                        <td>
                            <a href="/admin/valuations/view/<%= valuations[i].id %>" class="btn btn-danger">Ver</a>
                        </td>
                      </tr>
                      <% } %>
                </tbody>
              </table>
              <% } else {%>
                usted no tiene Valoracion
                <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% include ../partials/_footer %>